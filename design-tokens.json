{
  "$schema": "https://tr.designtokens.org/format/",
  "$description": "YOUTILITY Industrial Minimal Design System - Design Tokens Export for Kotlin/Android Mobile",
  "version": "1.0.0",
  "lastUpdated": "2025-01-04",
  "platforms": ["web", "android", "ios"],

  "color": {
    "$description": "Industrial minimal color system with dark mode support",

    "primary": {
      "$description": "Cobalt blue - professional, trustworthy brand color",
      "50": { "value": "#EFF6FF", "type": "color" },
      "100": { "value": "#DBEAFE", "type": "color" },
      "200": { "value": "#BFDBFE", "type": "color" },
      "300": { "value": "#93C5FD", "type": "color" },
      "400": { "value": "#60A5FA", "type": "color" },
      "500": { "value": "#3B82F6", "type": "color" },
      "600": {
        "value": "#155EEF",
        "type": "color",
        "$description": "Main brand color - use for primary actions",
        "$wcagAA": true,
        "$contrastRatio": "4.52:1 on white"
      },
      "700": {
        "value": "#0E4AC2",
        "type": "color",
        "$description": "Hover/pressed state for primary"
      },
      "800": { "value": "#1E40AF", "type": "color" },
      "900": { "value": "#1E3A8A", "type": "color" }
    },

    "accent": {
      "$description": "Cyan - use sparingly for highlights",
      "400": { "value": "#22D3EE", "type": "color" },
      "500": {
        "value": "#06B6D4",
        "type": "color",
        "$description": "Main accent color"
      },
      "600": { "value": "#0891B2", "type": "color" }
    },

    "neutral": {
      "$description": "Cool gray scale - industrial aesthetic",
      "50": {
        "value": "#F8FAFC",
        "type": "color",
        "$description": "App background (light mode)"
      },
      "100": {
        "value": "#F1F5F9",
        "type": "color",
        "$description": "Muted backgrounds"
      },
      "200": {
        "value": "#E2E8F0",
        "type": "color",
        "$description": "Default borders"
      },
      "300": { "value": "#CBD5E1", "type": "color" },
      "400": {
        "value": "#94A3B8",
        "type": "color",
        "$description": "Disabled text"
      },
      "500": {
        "value": "#64748B",
        "type": "color",
        "$description": "Muted text"
      },
      "600": { "value": "#475569", "type": "color" },
      "700": {
        "value": "#334155",
        "type": "color",
        "$description": "Secondary text"
      },
      "800": { "value": "#1E293B", "type": "color" },
      "900": {
        "value": "#0F172A",
        "type": "color",
        "$description": "Main text color (light mode)",
        "$wcagAAA": true
      }
    },

    "success": {
      "$description": "Green - success states, positive actions",
      "50": { "value": "#ECFDF5", "type": "color" },
      "100": { "value": "#D1FAE5", "type": "color" },
      "500": { "value": "#10B981", "type": "color" },
      "600": {
        "value": "#16A34A",
        "type": "color",
        "$description": "Main success color",
        "$wcagAA": true
      },
      "700": { "value": "#047857", "type": "color" }
    },

    "warning": {
      "$description": "Amber - warnings, alerts requiring attention",
      "50": { "value": "#FFFBEB", "type": "color" },
      "100": { "value": "#FEF3C7", "type": "color" },
      "500": { "value": "#F59E0B", "type": "color" },
      "600": {
        "value": "#D97706",
        "type": "color",
        "$description": "Main warning color",
        "$wcagAA": true
      },
      "700": { "value": "#B45309", "type": "color" }
    },

    "danger": {
      "$description": "Red - errors, destructive actions",
      "50": { "value": "#FEF2F2", "type": "color" },
      "100": { "value": "#FEE2E2", "type": "color" },
      "500": { "value": "#EF4444", "type": "color" },
      "600": {
        "value": "#DC2626",
        "type": "color",
        "$description": "Main danger color",
        "$wcagAA": true
      },
      "700": { "value": "#B91C1C", "type": "color" }
    },

    "info": {
      "$description": "Blue - informational messages",
      "50": { "value": "#EFF6FF", "type": "color" },
      "100": { "value": "#DBEAFE", "type": "color" },
      "500": { "value": "#3B82F6", "type": "color" },
      "600": {
        "value": "#0EA5E9",
        "type": "color",
        "$description": "Main info color"
      },
      "700": { "value": "#0284C7", "type": "color" }
    }
  },

  "spacing": {
    "$description": "8pt grid spacing system (4px base unit)",
    "0": { "value": "0", "type": "dimension" },
    "1": { "value": "4px", "type": "dimension" },
    "2": { "value": "8px", "type": "dimension" },
    "3": { "value": "12px", "type": "dimension" },
    "4": { "value": "16px", "type": "dimension", "$description": "Base spacing unit" },
    "5": { "value": "20px", "type": "dimension" },
    "6": { "value": "24px", "type": "dimension" },
    "8": { "value": "32px", "type": "dimension" },
    "10": { "value": "40px", "type": "dimension" },
    "12": { "value": "48px", "type": "dimension" },
    "16": { "value": "64px", "type": "dimension" },
    "20": { "value": "80px", "type": "dimension" },
    "24": { "value": "96px", "type": "dimension" }
  },

  "typography": {
    "$description": "Typography system with Inter (sans) and JetBrains Mono (mono)",

    "fontFamily": {
      "sans": {
        "value": "Inter",
        "type": "fontFamily",
        "$description": "Sans-serif for UI and body text",
        "$fallback": "system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif"
      },
      "mono": {
        "value": "JetBrains Mono",
        "type": "fontFamily",
        "$description": "Monospace for code and data",
        "$fallback": "ui-monospace, SFMono-Regular, Menlo, Consolas, monospace"
      }
    },

    "fontSize": {
      "$description": "Font size scale (8pt grid aligned)",
      "xs": { "value": "12px", "type": "dimension", "$lineHeight": "16px" },
      "sm": {
        "value": "14px",
        "type": "dimension",
        "$description": "Body text",
        "$lineHeight": "20px"
      },
      "base": { "value": "16px", "type": "dimension", "$lineHeight": "24px" },
      "lg": { "value": "18px", "type": "dimension", "$lineHeight": "28px" },
      "xl": {
        "value": "20px",
        "type": "dimension",
        "$description": "H3",
        "$lineHeight": "28px"
      },
      "2xl": {
        "value": "24px",
        "type": "dimension",
        "$description": "H2",
        "$lineHeight": "32px"
      },
      "3xl": {
        "value": "28px",
        "type": "dimension",
        "$description": "H1",
        "$lineHeight": "36px"
      },
      "4xl": { "value": "36px", "type": "dimension", "$lineHeight": "40px" }
    },

    "fontWeight": {
      "light": { "value": "300", "type": "number" },
      "normal": { "value": "400", "type": "number", "$description": "Regular" },
      "medium": { "value": "500", "type": "number" },
      "semibold": { "value": "600", "type": "number", "$description": "Emphasis" },
      "bold": { "value": "700", "type": "number" }
    },

    "lineHeight": {
      "none": { "value": "1", "type": "number" },
      "tight": { "value": "1.25", "type": "number", "$description": "Headings" },
      "normal": { "value": "1.5", "type": "number", "$description": "Body" },
      "relaxed": { "value": "1.625", "type": "number" },
      "loose": { "value": "2", "type": "number" }
    },

    "letterSpacing": {
      "tight": { "value": "-0.02em", "type": "dimension", "$description": "Headings" },
      "normal": { "value": "0", "type": "dimension" },
      "wide": { "value": "0.025em", "type": "dimension", "$description": "Uppercase labels" }
    }
  },

  "borderRadius": {
    "$description": "Border radius scale - square geometry with subtle curves",
    "none": { "value": "0", "type": "dimension" },
    "sm": { "value": "2px", "type": "dimension" },
    "base": {
      "value": "4px",
      "type": "dimension",
      "$description": "Controls (buttons, inputs)"
    },
    "md": {
      "value": "6px",
      "type": "dimension",
      "$description": "Surfaces (cards, modals)"
    },
    "lg": { "value": "8px", "type": "dimension" },
    "xl": { "value": "12px", "type": "dimension" },
    "2xl": { "value": "16px", "type": "dimension" },
    "full": {
      "value": "9999px",
      "type": "dimension",
      "$description": "Pills, circles"
    }
  },

  "borderWidth": {
    "0": { "value": "0", "type": "dimension" },
    "1": { "value": "1px", "type": "dimension", "$description": "Default borders" },
    "2": { "value": "2px", "type": "dimension", "$description": "Emphasis, focus" },
    "4": { "value": "4px", "type": "dimension", "$description": "Strong emphasis" }
  },

  "shadow": {
    "$description": "Subtle elevation only - industrial minimal aesthetic",
    "none": { "value": "none", "type": "shadow" },
    "xs": {
      "value": {
        "offsetX": "0",
        "offsetY": "1px",
        "blur": "2px",
        "spread": "0",
        "color": "rgba(0, 0, 0, 0.05)"
      },
      "type": "shadow"
    },
    "sm": {
      "value": {
        "offsetX": "0",
        "offsetY": "1px",
        "blur": "3px",
        "spread": "0",
        "color": "rgba(0, 0, 0, 0.1)"
      },
      "type": "shadow"
    },
    "base": {
      "value": {
        "offsetX": "0",
        "offsetY": "2px",
        "blur": "10px",
        "spread": "0",
        "color": "rgba(0, 0, 0, 0.06)"
      },
      "type": "shadow",
      "$description": "Subtle elevation for cards, modals"
    },
    "md": {
      "value": {
        "offsetX": "0",
        "offsetY": "4px",
        "blur": "16px",
        "spread": "0",
        "color": "rgba(0, 0, 0, 0.08)"
      },
      "type": "shadow"
    }
  },

  "duration": {
    "$description": "Animation/transition durations",
    "instant": { "value": "0ms", "type": "duration" },
    "fast": { "value": "100ms", "type": "duration" },
    "normal": {
      "value": "150ms",
      "type": "duration",
      "$description": "Standard transitions"
    },
    "slow": { "value": "200ms", "type": "duration" },
    "slower": { "value": "300ms", "type": "duration" }
  },

  "opacity": {
    "$description": "Opacity levels for layering and disabled states",
    "0": { "value": "0", "type": "number" },
    "5": { "value": "0.05", "type": "number" },
    "10": { "value": "0.1", "type": "number" },
    "20": { "value": "0.2", "type": "number" },
    "30": { "value": "0.3", "type": "number" },
    "40": { "value": "0.4", "type": "number" },
    "50": { "value": "0.5", "type": "number" },
    "60": {
      "value": "0.6",
      "type": "number",
      "$description": "Disabled elements"
    },
    "70": { "value": "0.7", "type": "number" },
    "80": { "value": "0.8", "type": "number" },
    "90": { "value": "0.9", "type": "number" },
    "100": { "value": "1", "type": "number" }
  },

  "zIndex": {
    "$description": "Z-index layering scale",
    "behind": { "value": "-1", "type": "number" },
    "default": { "value": "1", "type": "number" },
    "dropdown": { "value": "1000", "type": "number" },
    "sticky": { "value": "1020", "type": "number" },
    "fixed": { "value": "1030", "type": "number" },
    "modalBackdrop": { "value": "1040", "type": "number" },
    "modal": { "value": "1050", "type": "number" },
    "popover": { "value": "1060", "type": "number" },
    "tooltip": { "value": "1070", "type": "number" },
    "toast": { "value": "1080", "type": "number" }
  },

  "semantic": {
    "$description": "Semantic color mappings for consistent theming",

    "background": {
      "app": {
        "light": { "value": "{color.neutral.50.value}", "type": "color" },
        "dark": { "value": "#0B1220", "type": "color" }
      },
      "surface": {
        "light": { "value": "#FFFFFF", "type": "color" },
        "dark": { "value": "#0F172A", "type": "color" }
      },
      "muted": {
        "light": { "value": "{color.neutral.100.value}", "type": "color" },
        "dark": { "value": "#111827", "type": "color" }
      }
    },

    "text": {
      "primary": {
        "light": { "value": "{color.neutral.900.value}", "type": "color" },
        "dark": { "value": "#E5E7EB", "type": "color" }
      },
      "secondary": {
        "light": { "value": "{color.neutral.700.value}", "type": "color" },
        "dark": { "value": "#CBD5E1", "type": "color" }
      },
      "muted": {
        "light": { "value": "{color.neutral.500.value}", "type": "color" },
        "dark": { "value": "#94A3B8", "type": "color" }
      },
      "disabled": {
        "light": { "value": "{color.neutral.400.value}", "type": "color" },
        "dark": { "value": "#64748B", "type": "color" }
      },
      "inverse": {
        "light": { "value": "#FFFFFF", "type": "color" },
        "dark": { "value": "#0F172A", "type": "color" }
      }
    },

    "border": {
      "default": {
        "light": { "value": "{color.neutral.200.value}", "type": "color" },
        "dark": { "value": "#1F2937", "type": "color" }
      },
      "focus": {
        "light": { "value": "{color.primary.600.value}", "type": "color" },
        "dark": { "value": "{color.primary.500.value}", "type": "color" }
      }
    }
  },

  "$meta": {
    "platform": {
      "web": {
        "$description": "Use CSS custom properties (--color-primary-600)",
        "$example": "color: var(--color-primary-600);"
      },
      "android": {
        "$description": "Generate Kotlin object with Color values",
        "$example": "YOUTILITYTheme.Color.Primary600",
        "$codeGen": "See KOTLIN_CODE_GENERATION.md"
      },
      "ios": {
        "$description": "Generate Swift extension with UIColor",
        "$example": "UIColor.youtilityPrimary600",
        "$codeGen": "See IOS_CODE_GENERATION.md"
      }
    },
    "wcag": {
      "$description": "All color combinations meet WCAG AA (4.5:1 contrast)",
      "$tested": true,
      "$tool": "https://webaim.org/resources/contrastchecker/"
    },
    "usage": {
      "$description": "Import this file into Style Dictionary or similar tool to generate platform-specific tokens",
      "$tools": [
        "https://amzn.github.io/style-dictionary/",
        "https://www.tokens.studio/",
        "https://github.com/salesforce-ux/theo"
      ]
    }
  }
}
