{
  "dashboard": {
    "title": "Middleware Performance Dashboard",
    "tags": ["observability", "middleware", "performance", "2025-10-01"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{severity=\"critical\"}",
          "iconColor": "red",
          "name": "Critical Alerts",
          "tagKeys": "alertname,severity",
          "titleFormat": "Alert: {{ alertname }}"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "HTTP Request Rate (req/sec)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "tooltip": {"shared": true, "sort": 0, "value_type": "individual"}
      },
      {
        "id": 2,
        "title": "HTTP Request Duration (95th Percentile)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{endpoint}} p95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{endpoint}} p99",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "thresholds": [
          {"value": 1.0, "colorMode": "critical", "op": "gt", "fill": true, "line": true}
        ]
      },
      {
        "id": 3,
        "title": "GraphQL Rate-Limit Rejections",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(graphql_rate_limit_hits_total[5m])",
            "legendFormat": "{{endpoint}} - {{user_type}} ({{reason}})",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Rejections/sec"},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 2,
        "linewidth": 2,
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [10], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "60s",
          "handler": 1,
          "name": "High rate-limit rejections",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 4,
        "title": "GraphQL Complexity Rejections",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(graphql_complexity_rejections_total[5m])",
            "legendFormat": "{{reason}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Rejections/sec"},
          {"format": "short"}
        ],
        "lines": true,
        "bars": false,
        "stack": true,
        "fill": 5,
        "linewidth": 2
      },
      {
        "id": 5,
        "title": "HTTP Status Code Distribution",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "rate(http_requests_total{status_code=~\"2..\"}[5m])",
            "legendFormat": "2xx Success",
            "refId": "A"
          },
          {
            "expr": "rate(http_requests_total{status_code=~\"4..\"}[5m])",
            "legendFormat": "4xx Client Error",
            "refId": "B"
          },
          {
            "expr": "rate(http_requests_total{status_code=~\"5..\"}[5m])",
            "legendFormat": "5xx Server Error",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ],
        "lines": true,
        "stack": true,
        "fill": 2
      },
      {
        "id": 6,
        "title": "Middleware Execution Time Breakdown",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "rate(middleware_duration_seconds_sum{middleware=\"TracingMiddleware\"}[5m]) / rate(middleware_duration_seconds_count{middleware=\"TracingMiddleware\"}[5m])",
            "legendFormat": "TracingMiddleware",
            "refId": "A"
          },
          {
            "expr": "rate(middleware_duration_seconds_sum{middleware=\"GraphQLRateLimitingMiddleware\"}[5m]) / rate(middleware_duration_seconds_count{middleware=\"GraphQLRateLimitingMiddleware\"}[5m])",
            "legendFormat": "GraphQLRateLimitingMiddleware",
            "refId": "B"
          },
          {
            "expr": "rate(middleware_duration_seconds_sum{middleware=\"GraphQLComplexityValidationMiddleware\"}[5m]) / rate(middleware_duration_seconds_count{middleware=\"GraphQLComplexityValidationMiddleware\"}[5m])",
            "legendFormat": "GraphQLComplexityValidationMiddleware",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Avg Duration"},
          {"format": "short"}
        ],
        "lines": true,
        "stack": true,
        "fill": 2
      },
      {
        "id": 7,
        "title": "Rate-Limit Hit Rate by User Type",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "sum by(user_type) (rate(graphql_rate_limit_hits_total[5m]))",
            "legendFormat": "{{user_type}}",
            "refId": "A"
          }
        ],
        "pieType": "donut",
        "legend": {"show": true, "values": true}
      },
      {
        "id": 8,
        "title": "Rate-Limit Hit Rate by Reason",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 24},
        "targets": [
          {
            "expr": "sum by(reason) (rate(graphql_rate_limit_hits_total[5m]))",
            "legendFormat": "{{reason}}",
            "refId": "A"
          }
        ],
        "pieType": "donut",
        "legend": {"show": true, "values": true}
      },
      {
        "id": 9,
        "title": "Correlation ID Propagation Rate",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "(sum(rate(http_requests_total{has_correlation_id=\"true\"}[5m])) / sum(rate(http_requests_total[5m]))) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 90},
                {"color": "green", "value": 99}
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "title": "Active HTTP Connections",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 24},
        "targets": [
          {
            "expr": "http_active_connections",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 500}
              ]
            }
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "current": {
            "text": "Prometheus",
            "value": "Prometheus"
          }
        },
        {
          "name": "endpoint",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(http_requests_total, endpoint)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    }
  }
}
