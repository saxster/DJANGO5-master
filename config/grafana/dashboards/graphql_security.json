{
  "dashboard": {
    "title": "GraphQL Security & Performance",
    "tags": ["graphql", "security", "monitoring"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 0,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d"]
    },
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "type": "timeseries",
        "title": "GraphQL Query Rate (Accepted vs Rejected)",
        "targets": [
          {
            "expr": "rate(graphql_query_validation{status=\"accepted\"}[5m])",
            "legendFormat": "Accepted - {{instance}}",
            "refId": "A"
          },
          {
            "expr": "rate(graphql_query_validation{status=\"rejected\"}[5m])",
            "legendFormat": "Rejected - {{rejection_reason}}",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "lineInterpolation": "smooth"
            }
          }
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "type": "stat",
        "title": "Query Rejection Rate",
        "targets": [
          {
            "expr": "rate(graphql_query_validation{status=\"rejected\"}[5m]) / rate(graphql_query_validation[5m]) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 5, "color": "yellow"},
                {"value": 10, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 8},
        "type": "gauge",
        "title": "Query Complexity (P95)",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(graphql_query_complexity_bucket[5m])) by (le))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "min": 0,
            "max": 1000,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 600, "color": "yellow"},
                {"value": 800, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 8},
        "type": "gauge",
        "title": "Query Depth (P95)",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(graphql_query_depth_bucket[5m])) by (le))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "min": 0,
            "max": 15,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 8, "color": "yellow"},
                {"value": 10, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 8},
        "type": "stat",
        "title": "Validation Time (P95)",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(graphql_validation_time_bucket[5m])) by (le))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 50, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
        "type": "timeseries",
        "title": "Rejection Reasons Over Time",
        "targets": [
          {
            "expr": "sum(rate(graphql_query_validation{status=\"rejected\"}[5m])) by (rejection_reason)",
            "legendFormat": "{{rejection_reason}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "drawStyle": "bars",
              "fillOpacity": 80
            }
          }
        }
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "type": "table",
        "title": "Top Rejected Query Patterns",
        "targets": [
          {
            "expr": "topk(10, sum by (query_pattern) (rate(graphql_query_validation{status=\"rejected\"}[5m])))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ]
      },
      {
        "id": 8,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "type": "timeseries",
        "title": "Attack Detection Events",
        "targets": [
          {
            "expr": "rate(security_event{threat_type=\"graphql_bomb\"}[5m])",
            "legendFormat": "GraphQL Bomb Attacks",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "lineInterpolation": "stepAfter"
            },
            "color": {
              "mode": "fixed",
              "fixedColor": "red"
            }
          }
        }
      },
      {
        "id": 9,
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 32},
        "type": "heatmap",
        "title": "Query Complexity Distribution",
        "targets": [
          {
            "expr": "sum(rate(graphql_query_complexity_bucket[5m])) by (le)",
            "format": "heatmap",
            "refId": "A"
          }
        ]
      }
    ],
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=~\"GraphQL.*\"}",
          "iconColor": "red",
          "name": "GraphQL Alerts",
          "step": "60s",
          "tagKeys": "alertname,severity",
          "textFormat": "{{alertname}}: {{severity}}",
          "titleFormat": "Alert"
        }
      ]
    },
    "refresh": "10s",
    "schemaVersion": 36,
    "version": 1,
    "uid": "graphql-security-001"
  }
}
