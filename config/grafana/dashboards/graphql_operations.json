{
  "dashboard": {
    "title": "GraphQL Operations Dashboard",
    "tags": ["observability", "graphql", "mutations", "queries", "2025-10-01"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{component=\"graphql\"}",
          "iconColor": "red",
          "name": "GraphQL Alerts",
          "tagKeys": "alertname,severity,mutation_type",
          "titleFormat": "{{ alertname }}"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "GraphQL Mutation Rate (req/sec)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum by(mutation_type) (rate(graphql_mutations_total[5m]))",
            "legendFormat": "{{mutation_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Mutations/sec"},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "stack": false,
        "legend": {"show": true, "values": true, "alignAsTable": true, "rightSide": false}
      },
      {
        "id": 2,
        "title": "GraphQL Mutation Success Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "(sum(rate(graphql_mutations_total{status=\"success\"}[5m])) / sum(rate(graphql_mutations_total[5m]))) * 100",
            "legendFormat": "Success Rate",
            "refId": "A"
          },
          {
            "expr": "(sum(rate(graphql_mutations_total{status=\"failure\"}[5m])) / sum(rate(graphql_mutations_total[5m]))) * 100",
            "legendFormat": "Failure Rate",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Percentage", "min": 0, "max": 100},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 2,
        "linewidth": 2,
        "thresholds": [
          {"value": 90, "colorMode": "critical", "op": "lt", "fill": true, "line": true}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [90], "type": "lt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "60s",
          "handler": 1,
          "name": "Low mutation success rate",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 3,
        "title": "GraphQL Mutation Duration (Percentiles)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum by(mutation_type, le) (rate(graphql_mutation_duration_seconds_bucket[5m])))",
            "legendFormat": "{{mutation_type}} p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum by(mutation_type, le) (rate(graphql_mutation_duration_seconds_bucket[5m])))",
            "legendFormat": "{{mutation_type}} p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum by(mutation_type, le) (rate(graphql_mutation_duration_seconds_bucket[5m])))",
            "legendFormat": "{{mutation_type}} p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 0,
        "linewidth": 2,
        "thresholds": [
          {"value": 1.0, "colorMode": "custom", "fillColor": "rgba(255, 150, 0, 0.2)", "op": "gt", "line": true},
          {"value": 3.0, "colorMode": "critical", "fillColor": "rgba(255, 0, 0, 0.3)", "op": "gt", "line": true}
        ]
      },
      {
        "id": 4,
        "title": "Top 10 Slowest Mutations",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "topk(10, avg by(mutation_type) (rate(graphql_mutation_duration_seconds_sum[5m]) / rate(graphql_mutation_duration_seconds_count[5m])))",
            "instant": true,
            "format": "table",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "renameByName": {
                "mutation_type": "Mutation",
                "Value": "Avg Duration (s)"
              }
            }
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [{"desc": true, "displayName": "Avg Duration (s)"}]
        }
      },
      {
        "id": 5,
        "title": "GraphQL Complexity Rejections by Reason",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "sum by(reason) (rate(graphql_complexity_rejections_total[5m]))",
            "legendFormat": "{{reason}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Rejections/sec"},
          {"format": "short"}
        ],
        "lines": true,
        "bars": false,
        "stack": true,
        "fill": 5,
        "linewidth": 2
      },
      {
        "id": 6,
        "title": "Rejected Query Complexity Distribution",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(graphql_rejected_query_complexity_bucket[5m]))",
            "legendFormat": "p95 Rejected Complexity",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, rate(graphql_rejected_query_complexity_bucket[5m]))",
            "legendFormat": "p99 Rejected Complexity",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Complexity Score"},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2
      },
      {
        "id": 7,
        "title": "Mutation Failure Reasons",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "sum by(error_type) (rate(graphql_mutations_total{status=\"failure\"}[5m]))",
            "legendFormat": "{{error_type}}",
            "refId": "A"
          }
        ],
        "pieType": "donut",
        "legend": {"show": true, "values": true}
      },
      {
        "id": 8,
        "title": "Total Mutations (24h)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 24},
        "targets": [
          {
            "expr": "sum(increase(graphql_mutations_total[24h]))",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10000},
                {"color": "red", "value": 100000}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "Average Mutation Duration",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 24},
        "targets": [
          {
            "expr": "avg(rate(graphql_mutation_duration_seconds_sum[5m]) / rate(graphql_mutation_duration_seconds_count[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "decimals": 3,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1.0},
                {"color": "red", "value": 3.0}
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "title": "Mutations by Type (Rate)",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "sum by(mutation_type) (rate(graphql_mutations_total[5m]))",
            "legendFormat": "{{mutation_type}}",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "min": 0
          }
        }
      },
      {
        "id": 11,
        "title": "GraphQL Error Rate Timeline",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "targets": [
          {
            "expr": "rate(graphql_mutations_total{status=\"failure\"}[5m])",
            "legendFormat": "Mutation Failures",
            "refId": "A"
          },
          {
            "expr": "rate(graphql_complexity_rejections_total[5m])",
            "legendFormat": "Complexity Rejections",
            "refId": "B"
          },
          {
            "expr": "rate(graphql_rate_limit_hits_total[5m])",
            "legendFormat": "Rate-Limit Hits",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Errors/sec"},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 2,
        "linewidth": 2,
        "stack": false
      }
    ],
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "current": {
            "text": "Prometheus",
            "value": "Prometheus"
          }
        },
        {
          "name": "mutation_type",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(graphql_mutations_total, mutation_type)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        },
        {
          "name": "status",
          "type": "custom",
          "query": "success,failure",
          "includeAll": true,
          "multi": true
        }
      ]
    }
  }
}
