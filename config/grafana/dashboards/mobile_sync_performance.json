{
  "dashboard": {
    "title": "Mobile Sync Performance",
    "tags": ["mobile", "sync", "websocket", "rest-api"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Sync Operations per Minute",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(django_sync_operations_total[1m]) * 60)",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "displayName": "Sync Ops/min",
            "unit": "ops",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 500, "color": "yellow"},
                {"value": 1000, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Active WebSocket Connections",
        "type": "graph",
        "gridPos": {"x": 6, "y": 0, "w": 18, "h": 8},
        "targets": [
          {
            "expr": "django_websocket_connections_active",
            "legendFormat": "Active Connections",
            "refId": "A"
          },
          {
            "expr": "rate(django_websocket_connections_opened_total[5m]) * 300",
            "legendFormat": "New Connections (5m rate)",
            "refId": "B"
          },
          {
            "expr": "rate(django_websocket_connections_closed_total[5m]) * 300",
            "legendFormat": "Closed Connections (5m rate)",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Connections"},
          {"format": "short"}
        ],
        "legend": {"show": true, "values": true, "current": true}
      },
      {
        "id": 3,
        "title": "Delta Sync Latency Distribution",
        "type": "heatmap",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(django_sync_latency_seconds_bucket{sync_type=\"delta\"}[5m])) by (le)",
            "format": "heatmap",
            "refId": "A"
          }
        ],
        "dataFormat": "tsbuckets",
        "yAxis": {"format": "ms", "decimals": 0},
        "tooltip": {"show": true, "showHistogram": true}
      },
      {
        "id": 4,
        "title": "Bulk Sync Latency Distribution",
        "type": "heatmap",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(django_sync_latency_seconds_bucket{sync_type=\"bulk\"}[5m])) by (le)",
            "format": "heatmap",
            "refId": "A"
          }
        ],
        "dataFormat": "tsbuckets",
        "yAxis": {"format": "ms", "decimals": 0}
      },
      {
        "id": 5,
        "title": "Conflict Resolution Rate",
        "type": "stat",
        "gridPos": {"x": 0, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(django_sync_conflicts_total[5m])) / sum(rate(django_sync_operations_total[5m])) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "background"
        },
        "fieldConfig": {
          "defaults": {
            "displayName": "Conflict Rate",
            "unit": "percent",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Idempotency Cache Hit Rate",
        "type": "gauge",
        "gridPos": {"x": 6, "y": 16, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(django_idempotency_cache_hits_total[5m])) / (sum(rate(django_idempotency_cache_hits_total[5m])) + sum(rate(django_idempotency_cache_misses_total[5m]))) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Sync Operations by Type",
        "type": "piechart",
        "gridPos": {"x": 12, "y": 16, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "sum by (operation_type) (rate(django_sync_operations_total[5m]))",
            "legendFormat": "{{operation_type}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {"show": true, "values": true, "displayMode": "table"},
          "pieType": "donut"
        }
      },
      {
        "id": 8,
        "title": "Sync Errors by Endpoint",
        "type": "bargauge",
        "gridPos": {"x": 18, "y": 16, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "sum by (endpoint) (rate(django_sync_errors_total[5m]))",
            "legendFormat": "{{endpoint}}",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.1, "color": "yellow"},
                {"value": 1, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "Mobile App Versions Distribution",
        "type": "bargauge",
        "gridPos": {"x": 0, "y": 24, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum by (app_version) (django_mobile_app_version_active_connections)",
            "legendFormat": "v{{app_version}}",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "lcd"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "displayName": "Active Users"
          }
        }
      },
      {
        "id": 10,
        "title": "Average Sync Payload Size",
        "type": "graph",
        "gridPos": {"x": 12, "y": 24, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "avg(django_sync_payload_bytes{operation=\"upload\"}) by (sync_type)",
            "legendFormat": "Upload - {{sync_type}}",
            "refId": "A"
          },
          {
            "expr": "avg(django_sync_payload_bytes{operation=\"download\"}) by (sync_type)",
            "legendFormat": "Download - {{sync_type}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Payload Size"},
          {"format": "short"}
        ]
      },
      {
        "id": 11,
        "title": "WebSocket Message Queue Depth",
        "type": "graph",
        "gridPos": {"x": 0, "y": 32, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "django_websocket_message_queue_depth",
            "legendFormat": "Queue Depth",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Messages in Queue"}
        ],
        "alert": {
          "name": "High WebSocket Queue Depth",
          "conditions": [
            {
              "evaluator": {"params": [1000], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "frequency": "1m",
          "handler": 1,
          "message": "WebSocket message queue depth exceeded 1000 - possible connection issues",
          "noDataState": "no_data",
          "executionErrorState": "alerting"
        }
      },
      {
        "id": 12,
        "title": "Sync Success Rate (Last Hour)",
        "type": "stat",
        "gridPos": {"x": 12, "y": 32, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "sum(increase(django_sync_operations_success_total[1h])) / sum(increase(django_sync_operations_total[1h])) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "background"
        },
        "fieldConfig": {
          "defaults": {
            "displayName": "Success Rate",
            "unit": "percent",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 95, "color": "yellow"},
                {"value": 99, "color": "green"}
              ]
            }
          }
        }
      }
    ],
    "time": {"from": "now-6h", "to": "now"},
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m"]
    },
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=~\".*Sync.*|.*WebSocket.*\"}",
          "iconColor": "rgba(255, 150, 0, 1)",
          "name": "Sync Alerts",
          "titleFormat": "Sync Alert: {{alertname}}"
        }
      ]
    }
  }
}
