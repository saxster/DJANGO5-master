# EditorConfig helps maintain consistent coding styles for multiple developers
# working on the same project across various editors and IDEs.
# https://editorconfig.org/

# top-most EditorConfig file
root = true

# ============================================================================
# UNIVERSAL SETTINGS (All files)
# ============================================================================
[*]
# Character encoding
charset = utf-8

# Line endings
end_of_line = lf

# Insert newline at end of file
insert_final_newline = true

# Trim trailing whitespace
trim_trailing_whitespace = true

# ============================================================================
# PYTHON FILES
# ============================================================================
[*.py]
# Indentation
indent_style = space
indent_size = 4

# Line length limits (enforced by linters)
# - Maximum line: 120 characters (flake8)
# - Architecture limit: 150 (model files), 200 (settings)
max_line_length = 120

# Python-specific conventions
spaces_around_operators = true

# ============================================================================
# DJANGO TEMPLATE FILES
# ============================================================================
[*.{html,jinja,jinja2}]
indent_style = space
indent_size = 2

# Keep HTML tags on same line for small content
trim_trailing_whitespace = true

# ============================================================================
# YAML CONFIGURATION FILES
# ============================================================================
[*.{yaml,yml}]
indent_style = space
indent_size = 2
max_line_length = 120

# ============================================================================
# JSON FILES
# ============================================================================
[*.json]
indent_style = space
indent_size = 2
max_line_length = off

# ============================================================================
# MARKDOWN DOCUMENTATION
# ============================================================================
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false  # Markdown requires trailing spaces for line breaks
max_line_length = off

# ============================================================================
# SHELL SCRIPTS
# ============================================================================
[*.{sh,bash}]
indent_style = space
indent_size = 2
end_of_line = lf

# ============================================================================
# CONFIGURATION FILES
# ============================================================================
[*.{ini,cfg,conf}]
indent_style = space
indent_size = 2

# ============================================================================
# DOCKER FILES
# ============================================================================
[Dockerfile]
indent_style = space
indent_size = 2

[docker-compose.yml]
indent_style = space
indent_size = 2

# ============================================================================
# SQL FILES
# ============================================================================
[*.sql]
indent_style = space
indent_size = 4
max_line_length = 120

# ============================================================================
# CSS & SCSS
# ============================================================================
[*.{css,scss}]
indent_style = space
indent_size = 2
max_line_length = 120

# ============================================================================
# JAVASCRIPT / TYPESCRIPT
# ============================================================================
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
max_line_length = 120

# ============================================================================
# SETTINGS & ENV FILES (Special cases)
# ============================================================================
[.env*]
# Environment files: one setting per line
indent_style = space
indent_size = 0
charset = utf-8

# ============================================================================
# MIGRATION FILES (Django)
# ============================================================================
[*/migrations/*.py]
# Migrations are auto-generated; don't enforce strict formatting
# But maintain consistency where possible
indent_style = space
indent_size = 4

# ============================================================================
# TEST FILES
# ============================================================================
[test_*.py]
indent_style = space
indent_size = 4
max_line_length = 120

[*_test.py]
indent_style = space
indent_size = 4
max_line_length = 120

[*/tests/*.py]
indent_style = space
indent_size = 4
max_line_length = 120

# ============================================================================
# SPECIAL CASES
# ============================================================================

# Makefile requires tabs
[Makefile]
indent_style = tab

# .pre-commit-config.yaml
[.pre-commit-config.yaml]
indent_style = space
indent_size = 2

# pytest.ini
[pytest.ini]
indent_style = space
indent_size = 4

# Django settings
[intelliwiz_config/settings/*.py]
indent_style = space
indent_size = 4
max_line_length = 120
