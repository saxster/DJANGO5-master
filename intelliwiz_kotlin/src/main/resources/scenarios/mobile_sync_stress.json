{
  "name": "Mobile Sync Stress Test",
  "description": "High-throughput mobile synchronization scenario with realistic payload mix",
  "protocol": "WEBSOCKET",
  "endpoint": "localhost:8000/ws/mobile/sync/",
  "duration_seconds": 300,
  "connections": 50,
  "rates": {
    "messagesPerSecond": 15.0,
    "burstMultiplier": 2.5,
    "rampUpSeconds": 30,
    "rampDownSeconds": 30
  },
  "payloads": [
    "VOICE_DATA",
    "BEHAVIORAL_DATA",
    "SESSION_DATA",
    "METRICS"
  ],
  "failureInjection": {
    "enabled": true,
    "networkDelays": {
      "enabled": true,
      "rangeMs": {
        "start": 50,
        "endInclusive": 500
      },
      "probability": 0.05
    },
    "duplicateMessages": {
      "probability": 0.01,
      "maxDuplicates": 3
    },
    "schemaDrift": {
      "probability": 0.001,
      "mutations": [
        {
          "type": "ADD_FIELD",
          "fieldPath": "extra_field",
          "newValue": "drift_test"
        },
        {
          "type": "REMOVE_FIELD",
          "fieldPath": "optional_timestamp"
        }
      ]
    },
    "connectionDrops": {
      "probability": 0.001,
      "reconnectDelayMs": 1000
    }
  },
  "authentication": {
    "type": "BEARER_TOKEN",
    "credentials": {
      "token": "test_token_123"
    }
  },
  "validation": {
    "validateResponses": true,
    "expectedStatusCodes": [200, 202],
    "maxLatencyMs": 1000,
    "requiredFields": ["type", "correlation_id"]
  }
}